local Luna = loadstring(game:HttpGet("https://raw.githubusercontent.com/Nebula-Softworks/Luna-Interface-Suite/refs/heads/master/source.lua"))()

local Window = Luna:CreateWindow({
	Name = "Legitxwx Hub | v1.1.0",
	Subtitle = "Plants vs Brainrots",
	LogoID = "82795327169782",
	LoadingEnabled = true,
	LoadingTitle = "Legitxwx Hub",
	LoadingSubtitle = "by xwx",
	ConfigSettings = {ConfigFolder = "LegitxwxHub"},
	KeySystem = false
})

-- Create Home Tab FIRST
Window:CreateHomeTab({
	SupportedExecutors = {},
	DiscordInvite = "9e9V648aGq",
	Icon = 1
})

-- üåü Gears Tab
local gearTab = Window:CreateTab({Name = "üåü Gears", Icon = "tool"})
gearTab:CreateParagraph({Title = "Gear Shop", Text = "Select gears and toggles will work here."})
local gearToggle = gearTab:CreateToggle({
	Name = "Auto Buy Gears",
	CurrentValue = false,
	Callback = function(state)
		print("Auto Buy Gears:", state)
	end
})
gearTab:BuildConfigSection()

-- üå± Seeds Tab
local seedTab = Window:CreateTab({Name = "üå± Seeds", Icon = "leaf"})
seedTab:CreateParagraph({Title = "Seed Shop", Text = "Select seeds and toggles will work here."})
local seedToggle = seedTab:CreateToggle({
	Name = "Auto Buy Seeds",
	CurrentValue = false,
	Callback = function(state)
		print("Auto Buy Seeds:", state)
	end
})
seedTab:BuildConfigSection()

-- üß† Brainrots Tab
local brainTab = Window:CreateTab({Name = "üß† Brainrots", Icon = "brain"})
brainTab:CreateParagraph({Title = "Brainrots", Text = "Auto Equip Brainrots"})
local brainToggle = brainTab:CreateToggle({
	Name = "Auto Equip Brainrots",
	CurrentValue = false,
	Callback = function(state)
		print("Auto Equip Brainrots:", state)
	end
})
brainTab:BuildConfigSection()

-- üßç Local Tab
local localTab = Window:CreateTab({Name = "üßç Local", Icon = "user"})
localTab:CreateParagraph({Title = "Player Info", Text = "Username: "..game.Players.LocalPlayer.Name})
localTab:CreateButton({
	Name = "Copy Discord",
	Callback = function()
		if setclipboard then setclipboard("https://dsc.gg/9e9V648aGq") end
	end
})
localTab:BuildConfigSection()

-- üìú Update Log Tab
local updTab = Window:CreateTab({Name = "UPD LOG", Icon = "scroll"})
updTab:CreateParagraph({Title = "Update Log", Text = [[
v1.1.0:
- Fixed tabs showing
- Full config saving
- Local tab working
- FPS unlock notification
]]})
updTab:BuildConfigSection()
